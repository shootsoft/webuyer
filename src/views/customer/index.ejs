<!-- .row title -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Customer</h1>
        
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<!-- .row body -->
<div class="row" ng-app="customerApp" ng-controller="customerCtrl">
    <div class="row" style="margin-bottom:5px;">
        <div class="col-md-2">
            <button type="button" class="btn btn-primary" ng-click="new()" data-toggle="modal" data-target="#edit_customer"><i class="fa fa-plus" ></i> New</button>
        </div>
        <!-- /.col-lg-2 -->
        <div class="col-md-7">
            
        </div>
        <!-- /.col-lg-8 -->
        <div class="col-md-3" style="text-align:right">
        
            
        </div>
        <!-- /.col-lg-2 -->
    </div>    
    <!-- /.row -->
   
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product list

                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example" datatable dt-options="dtOptions"  dt-columns="dtColumns" dt-instance="dtInstance" >
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Post</th>
                                    <th>Phone</th>
                                    <th>Province</th>
                                    <th>City</th>
                                    <th>Region</th>
                                    <th>UpdatedAt</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->

        <!-- edit_customer Modal -->
        <div class="modal fade" id="edit_customer" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">New/Edit Supplier</h4>
                    </div>
                    <div class="modal-body">
                        <form id="orderform" role="form" action="/orders/new" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                 <div class="panel-body">
                                        <div class="row">
                                            <input type="hidden" id="customer_id" name="customer_id" ng-model="customer.id">
                                            
                                            <div class="form-group">
                                                <label>Name</label>
                                                <input class="form-control" placeholder="Name" id="customer_name" name="customer_name" ng-model="customer.name">
                                                <p class="help-block">Customer's name</p>
                                            </div>
                                            <div class="form-group">
                                                <label>Address</label>
                                                <input class="form-control" placeholder="Address" id="customer_address" name="customer_address" ng-model="customer.address">
                                                <p class="help-block">Customer's address</p>
                                            </div>
                                            <div class="form-group">
                                                <label>Post</label>
                                                <input class="form-control" placeholder="Post" id="customer_post" name="customer_post" ng-model="customer.post">
                                                <p class="help-block">Customer's post</p>
                                            </div>
                                            <div class="form-group">
                                                <label>Phone</label>
                                                <input class="form-control" placeholder="Phone" id="customer_phone" name="customer_phone" ng-model="customer.phone">
                                                <p class="help-block">Customer's phone</p>
                                            </div>
                                            <div class="form-group">
                                                <label>Province</label>
                                                <input class="form-control" placeholder="Province" id="customer_province" name="customer_province" ng-model="customer.province">
                                                <p class="help-block">Customer's province</p>
                                            </div>
                                            <div class="form-group">
                                                <label>City</label>
                                                <input class="form-control" placeholder="City" id="customer_city" name="customer_city" ng-model="customer.city">
                                                <p class="help-block">Customer's city</p>
                                            </div>
                                            <div class="form-group">
                                                <label>Region</label>
                                                <input class="form-control" placeholder="Region" id="customer_region" name="customer_region" ng-model="customer.region">
                                                <p class="help-block">Customer's region</p>
                                            </div>
                                            
                                        </div>
                                        <!-- /.row (nested) -->
                                    </div>
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        </form>
                        <div class="row">
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="saveButton" ng-click="save()" data-dismiss="modal">Submit</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </div>

</div>