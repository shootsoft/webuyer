<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Products</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<div class="row" id="capp" ng-app="cartApp" ng-controller="cartCtrl">

    <div class="row" style="margin-bottom:5px;">
        <div class="col-md-2">
            <button type="button" class="btn btn-primary"><i class="fa fa-refresh"></i> Sync</button>
        </div>
        <!-- /.col-lg-2 -->
        <div class="col-md-7">
            
        </div>
        <!-- /.col-lg-8 -->
        <div class="col-md-3" style="text-align:right">
        <span type="button" class="btn btn-info" data-toggle="modal" data-target="#cart">Summary: {{summary}}￥</span>
            
        </div>
        <!-- /.col-lg-2 -->
    </div>    
    <!-- /.row -->
   
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product list

                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Price(￥)</th>
                                    <th>Description</th>
                                    <th>Order</th>
                                </tr>
                            </thead>
                            <tbody>
                               

                            </tbody>
                        </table>
                    </div>
                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->

        <!-- Modal -->
        <div class="modal fade" id="cart" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Cart</h4>
                    </div>
                    <div class="modal-body">
                        <form id="orderform" action="/orders/new" method="post">
                        <div clas="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Price(￥)</th>
                                        <th>Quality</th>
                                        <th>Sum(￥)</th>
                                    </tr>
                                </thead>
                                <tr ng-repeat="x in products">
                                    <td>{{ x.item_name }}</td>
                                    <td>{{ x.price }}</td>
                                    <td><input  class="form-control" style="width:50px" ng-model="x.quality" value="{{ x.quality }}" ng-change="summary_price()"/></td>
                                    <td>{{ x.quality * x.price }}</td>
                                </tr>
                                <tr>
                                    <td colspan="4">Summary: {{summary}}￥</td>
                                </tr>
                            </table>
                        </div>
                        </form>
                        <div class="row">
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="genorder">Check out</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </div>

</div>

<link href="/admin/bower_components/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.css" rel="stylesheet">
<script type="text/javascript" src="/admin/bower_components/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js"></script>
<script type="text/javascript" src="/admin/bower_components/angular/angular.min.js"></script>
<script type="text/javascript" src="/admin/bower_components/ngcart/dist/ngCart.min.js"></script>
<script type="text/javascript" src="/js/modules/product/index.js"></script>
   
   