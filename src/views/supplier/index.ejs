<!-- .row title -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Supplier</h1>
        
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<!-- .row body -->
<div class="row" id="capp" ng-app="supplierApp" ng-controller="supplierCtrl">
    <div class="row" style="margin-bottom:5px;">
        <div class="col-md-2">
            <button type="button" class="btn btn-primary" ng-click="new()" data-toggle="modal" data-target="#edit_supplier"><i class="fa fa-plus" ></i> New</button>
        </div>
        <!-- /.col-lg-2 -->
        <div class="col-md-7">
            
        </div>
        <!-- /.col-lg-8 -->
        <div class="col-md-3" style="text-align:right">
        
            
        </div>
        <!-- /.col-lg-2 -->
    </div>    
    <!-- /.row -->
   
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product list

                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example" datatable dt-options="dtOptions"  dt-columns="dtColumns" dt-instance="dtInstance" >
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Index</th>
                                    <th>Location</th>
                                    <th>Open Date</th>
                                    <th>Updated At</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="supplier in suppliers">
                                    <td>{{supplier.id}}</td>
                                    <td>{{supplier.name}}</td>
                                    <td>{{supplier.index}}</td>
                                    <td>{{supplier.location}}</td>
                                    <td>{{supplier.open_date}}</td>
                                    <td>{{supplier.updatedAt}}</td>
                                    <td><button type="button" class="btn btn-info btn-circle" ng-click=(supplier.id)><i class="fa fa-edit"></i>
                            </button></td>
                                </tr>       
                            </tbody>
                        </table>
                    </div>
                    
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->

        <!-- edit_supplier Modal -->
        <div class="modal fade" id="edit_supplier" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">New/Edit Supplier</h4>
                    </div>
                    <div class="modal-body">
                        <form id="orderform" role="form" action="/orders/new" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                 <div class="panel-body">
                                        <div class="row">
                                            <input type="hidden" id="supplier_id" name="supplier_id" ng-model="supplier.id">
                                            <div class="form-group">
                                                <label>Name</label>
                                                <input class="form-control" id="supplier_name" name="supplier_name" ng-model="supplier.name">
                                                <p class="help-block">Supplier's name.</p>
                                            </div>
                                            <div class="form-group">
                                                <label>Location</label>
                                                <textarea class="form-control" rows="2" id="supplier_location" name="supplier_location" ng-model="supplier.location"></textarea>
                                                <p class="help-block">Supplier's location.</p>
                                            </div>
                                            
                                            
                                            <div class="form-group">
                                                <label>Index</label>
                                                <select class="form-control" id="supplier_index" name="supplier_index" >
                                                    <option ng-repeat="item in supplier_index" 
                                                    ng-selected="supplier.index == item"
                                                        ng-value="item">{{item}}</option>
                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Open Date</label>
                                                <textarea class="form-control" rows="3" id="supplier_open_date" name="supplier_open_date" ng-model="supplier.open_date"></textarea>
                                                <p class="help-block">Supplier's open date, like Mon-Fri 8:00~17:00.</p>
                                            </div>
                                        </div>
                                        <!-- /.row (nested) -->
                                    </div>
                            </div>
                            <!-- /.col-lg-12 -->
                        </div>
                        </form>
                        <div class="row">
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="saveButton" ng-click="save()" data-dismiss="modal">Submit</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </div>

</div>

   

   